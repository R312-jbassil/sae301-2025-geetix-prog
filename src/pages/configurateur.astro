  </svg>`;

  const firstMontureBtn = document.querySelector(
    '[data-type="monture"]'
  ) as HTMLButtonElement;
  const firstBranchesBtn = document.querySelector(
    '[data-type="branches"]'
  ) as HTMLButtonElement;
  const firstMateriauBtn = document.querySelector(
    "[data-materiau-id]"
  ) as HTMLButtonElement;

  let currentConfig = {
    materiauMonture: firstMontureBtn?.dataset.color || "#000000",
    couleurBranches: firstBranchesBtn?.dataset.color || "#000000",
    materiauId: firstMateriauBtn?.dataset.materiauId || "",
    largeurPont: 18,
    tailleVerres: 1.1,
  };

  function showSuccessToast() {
    const toast = document.getElementById("success-toast")!;
    toast.classList.remove("hidden");
    setTimeout(() => {
      toast.classList.add("hidden");
    }, 3000);
  }

  function showErrorToast(message: string) {
    const toast = document.getElementById("error-toast")!;
    const messageEl = document.getElementById("error-message")!;
    messageEl.textContent = message;
    toast.classList.remove("hidden");
    setTimeout(() => {
      toast.classList.add("hidden");
    }, 3000);
  }

  function updateSVG() {
    const pontOffset = (currentConfig.largeurPont - 18) * 2;
    const verresTranslate = -(currentConfig.tailleVerres - 1.1) * 100;

    let svg = svgTemplate
      .replace(/MONTURE_COLOR/g, currentConfig.materiauMonture)
      .replace(/BRANCHES_COLOR/g, currentConfig.couleurBranches)
      .replace("PONT_OFFSET", pontOffset.toString())
      .replace("VERRES_SCALE", currentConfig.tailleVerres.toString())
      .replace("VERRES_TRANSLATE", verresTranslate.toString());

    document.getElementById("svg-preview")!.innerHTML = svg;
  }

  // Listeners pour les couleurs (monture et branches)
  document.querySelectorAll("[data-type]").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const button = e.currentTarget as HTMLButtonElement;
      const type = button.dataset.type!;
      const color = button.dataset.color!;

      document.querySelectorAll(`[data-type="${type}"]`).forEach((b) => {
        b.classList.remove("ring-2", "ring-accent");
      });
      button.classList.add("ring-2", "ring-accent");

      if (type === "monture") {
        currentConfig.materiauMonture = color;
      } else {
        currentConfig.couleurBranches = color;
      }
      updateSVG();
    });
  });

  // Listener pour les matÃ©riaux (juste sauvegarder l'ID, pas de modification SVG)
  document.querySelectorAll("[data-materiau-id]").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      const button = e.currentTarget as HTMLButtonElement;
      const materiauId = button.dataset.materiauId!;

      document.querySelectorAll("[data-materiau-id]").forEach((b) => {
        b.classList.remove("ring-2", "ring-accent");
      });
      button.classList.add("ring-2", "ring-accent");

      currentConfig.materiauId = materiauId;
    });
  });

  document.getElementById("largeur-pont")!.addEventListener("input", (e) => {
    currentConfig.largeurPont = parseInt((e.target as HTMLInputElement).value);
    updateSVG();
  });

  document.getElementById("taille-verres")!.addEventListener("change", (e) => {
    currentConfig.tailleVerres = parseFloat(
      (e.target as HTMLSelectElement).value
    );
    updateSVG();
  });

  document.getElementById("save-btn")!.addEventListener("click", () => {
    const modal = document.getElementById("save-modal") as HTMLDialogElement;
    modal.showModal();
  });

  document.getElementById("cancel-save")!.addEventListener("click", () => {
    const modal = document.getElementById("save-modal") as HTMLDialogElement;
    modal.close();
  });

  document
    .getElementById("confirm-save")!
    .addEventListener("click", async () => {
      const modelName = (
        document.getElementById("model-name") as HTMLInputElement
      ).value;

      if (!modelName.trim()) {
        showErrorToast("Veuillez entrer un nom");
        return;
      }

      const svgContent = document.getElementById("svg-preview")!.innerHTML;

      try {
        const response = await fetch("/api/saveSVG", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            svg: svgContent,
            config: currentConfig,
            modelName: modelName,
          }),
        });

        const data = await response.json();
        if (data.success) {
          const modal = document.getElementById(
            "save-modal"
          ) as HTMLDialogElement;
          modal.close();
          (document.getElementById("model-name") as HTMLInputElement).value =
            "";
          showSuccessToast();
        } else {
          showErrorToast("Erreur : " + data.error);
        }
      } catch (error) {
        showErrorToast("Erreur de sauvegarde");
        console.error(error);
      }
    });

  document.getElementById("reset-btn")!.addEventListener("click", () => {
    const firstMonture = document.querySelector(
      '[data-type="monture"]'
    ) as HTMLButtonElement;
    const firstBranches = document.querySelector(
      '[data-type="branches"]'
    ) as HTMLButtonElement;
    const firstMateriau = document.querySelector(
      "[data-materiau-id]"
    ) as HTMLButtonElement;

    currentConfig = {
      materiauMonture: firstMonture?.dataset.color || "#000000",
      couleurBranches: firstBranches?.dataset.color || "#000000",
      materiauId: firstMateriau?.dataset.materiauId || "",
      largeurPont: 18,
      tailleVerres: 1.1,
    };

    document
      .querySelectorAll("[data-type]")
      .forEach((btn) => btn.classList.remove("ring-2", "ring-accent"));
    document
      .querySelectorAll("[data-materiau-id]")
      .forEach((btn) => btn.classList.remove("ring-2", "ring-accent"));

    firstMonture?.classList.add("ring-2", "ring-accent");
    firstBranches?.classList.add("ring-2", "ring-accent");
    firstMateriau?.classList.add("ring-2", "ring-accent");

    (document.getElementById("largeur-pont") as HTMLInputElement).value = "18";
    (document.getElementById("taille-verres") as HTMLSelectElement).value =
      "1.1";
    updateSVG();
  });

  updateSVG();
