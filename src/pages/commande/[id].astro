---
import Layout from "../../layouts/Layout.astro";
import PocketBase from "pocketbase";

const { id } = Astro.params;

// Redirection si pas d'ID
if (!id) {
  return Astro.redirect("/mes-lunettes");
}

const pb = new PocketBase("https://sae301.mathis-guellati.fr");
const authCookie = Astro.cookies.get("pb_auth");

if (!authCookie) {
  return Astro.redirect("/connexion");
}

const authData = JSON.parse(decodeURIComponent(authCookie.value));
pb.authStore.save(authData.token, authData.model);

// Récupère la lunette
const lunette = await pb.collection("Lunettes").getOne(id, {
  expand: "materiau",
});

const prixBase = 250;
const prixTotal = prixBase + (lunette.expand?.materiau?.prix_unitaire || 0);

// Taille en texte
const taille =
  lunette.taille_verres === 1 ? "S" : lunette.taille_verres === 1.1 ? "M" : "L";
