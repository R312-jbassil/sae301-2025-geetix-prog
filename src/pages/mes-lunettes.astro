import Layout from "../layouts/Layout.astro";
import PocketBase from "pocketbase";

const authCookie = Astro.cookies.get("pb_auth");
if (!authCookie) {
  return Astro.redirect("/connexion");
}

const pb = new PocketBase("http://127.0.0.1:8090");
const authData = JSON.parse(decodeURIComponent(authCookie.value));
pb.authStore.save(authData.token, authData.model);

const userId = pb.authStore.model.id;

// R√©cup√®re les lunettes du configurateur
const lunettes = await pb.collection("Lunettes").getFullList({
  filter: `user.id = "${userId}"`,
  sort: "-created",
  expand: "materiau",
});

// R√©cup√®re les SVG g√©n√©r√©s par l'IA
const configIA = await pb.collection("Config_IA").getFullList({
  filter: `user.id = "${userId}"`,
  sort: "-created",
});

const lunettesAvecPrix = lunettes.map((lunette: any) => {
  const prixBase = 250;
  const prixMateriau = lunette.expand?.materiau?.prix_unitaire || 0;
  const prixTotal = prixBase + prixMateriau;
  return { ...lunette, prixTotal };
});
