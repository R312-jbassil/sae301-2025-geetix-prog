<script>
  let deleteId: string | null = null;
  let deleteType: string | null = null;

  document.querySelectorAll(".delete-btn").forEach((btn) => {
    btn.addEventListener("click", (e) => {
      deleteId = (e.target as HTMLButtonElement).dataset.id || null;
      deleteType = (e.target as HTMLButtonElement).dataset.type || null;
      const modal = document.getElementById("delete-modal") as HTMLDialogElement;
      modal.showModal();
    });
  });

  document.getElementById("cancel-delete")!.addEventListener("click", () => {
    const modal = document.getElementById("delete-modal") as HTMLDialogElement;
    modal.close();
    deleteId = null;
    deleteType = null;
  });

  document.getElementById("confirm-delete")!.addEventListener("click", async () => {
    if (!deleteId || !deleteType) return;

    const card = document.querySelector(
      deleteType === "lunette"
        ? `[data-lunette-id="${deleteId}"]`
        : `[data-config-id="${deleteId}"]`
    );
    const modal = document.getElementById("delete-modal") as HTMLDialogElement;

    const endpoint = deleteType === "config" ? `/api/config/${deleteId}/delete` : `/api/lunettes/${deleteId}/delete`;

    try {
      const response = await fetch(endpoint, {
        method: "DELETE",
      });

      if (response.ok) {
        modal.close();
        card?.classList.add("opacity-0", "transition-opacity", "duration-300");
        setTimeout(() => {
          card?.remove();
        }, 300);
      } else {
        alert("Erreur de suppression");
      }
    } catch (error) {
      console.error("Erreur:", error);
      alert("Erreur de suppression");
    }

    deleteId = null;
    deleteType = null;
  });
</script>
